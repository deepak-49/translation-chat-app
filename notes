<script>
  const chatWindow = document.getElementById('chatWindow');
  const messageInput = document.getElementById('messageInput');
  const sendBtn = document.getElementById('sendBtn');

  sendBtn.addEventListener('click', () => {
    const txt = messageInput.value.trim();
    if (!txt) return;
    appendMessage(txt, 'me');
    messageInput.value = '';
    scrollToBottom();
  });

  messageInput.addEventListener('keydown', (e) => {
    if (e.key === 'Enter') sendBtn.click();
  });

  document.getElementById('saveProfile').addEventListener('click', () => {
    document.getElementById('sidebarName').textContent = displayName.value;
    document.getElementById('headerName').textContent = displayName.value;
    document.getElementById('sidebarLang').textContent = preferredLang.value.toUpperCase();
  });

  function appendMessage(text, who='them'){
    const div = document.createElement('div');
    div.className = 'message ' + (who === 'me' ? 'from-me' : 'from-them');
    div.textContent = text;
    chatWindow.appendChild(div);
  }

  function scrollToBottom(){ chatWindow.scrollTop = chatWindow.scrollHeight; }

  const demoDict = {
    hi: { "Hey! How are you?":"‡§π‡•á! ‡§ï‡•à‡§∏‡•á ‡§π‡•ã?", "I'm good ‚Äî working on the new project.":"‡§Æ‡•à‡§Ç ‡§†‡•Ä‡§ï ‡§π‡•Ç‡§Å ‚Äî ‡§®‡§è ‡§™‡•ç‡§∞‡•ã‡§ú‡•á‡§ï‡•ç‡§ü ‡§™‡§∞ ‡§ï‡§æ‡§Æ ‡§ï‡§∞ ‡§∞‡§π‡§æ ‡§π‡•Ç‡§Å‡•§", "That's awesome. Need any help?":"‡§Ø‡§π ‡§∂‡§æ‡§®‡§¶‡§æ‡§∞ ‡§π‡•à‡•§ ‡§ï‡•ç‡§Ø‡§æ ‡§Æ‡§¶‡§¶ ‡§ö‡§æ‡§π‡§ø‡§è?" },
    ta: { "Hey! How are you?":"‡Æπ‡Øá! ‡Æé‡Æ™‡Øç‡Æ™‡Æü‡Æø ‡Æá‡Æ∞‡ØÅ‡Æï‡Øç‡Æï‡Æø‡Æ±‡Ææ‡ÆØ‡Øç?", "I'm good ‚Äî working on the new project.":"‡Æ®‡Ææ‡Æ©‡Øç ‡Æ®‡Æ≤‡ÆÆ‡Ææ‡Æï ‡Æá‡Æ∞‡ØÅ‡Æï‡Øç‡Æï‡Æø‡Æ±‡Øá‡Æ©‡Øç ‚Äî ‡Æ™‡ØÅ‡Æ§‡Æø‡ÆØ ‡Æ§‡Æø‡Æü‡Øç‡Æü‡Æ§‡Øç‡Æ§‡Æø‡Æ≤‡Øç ‡Æµ‡Øá‡Æ≤‡Øà ‡Æö‡ØÜ‡ÆØ‡Øç‡Æï‡Æø‡Æ±‡Øá‡Æ©‡Øç.", "That's awesome. Need any help?":"‡ÆÖ‡Æ§‡ØÅ ‡ÆÖ‡Æ∞‡ØÅ‡ÆÆ‡Øà. ‡Æâ‡Æ§‡Æµ‡Æø ‡Æµ‡Øá‡Æ£‡Øç‡Æü‡ØÅ‡ÆÆ‡Ææ?" },
    es: { "Hey! How are you?":"¬°Hola! ¬øC√≥mo est√°s?", "I'm good ‚Äî working on the new project.":"Estoy bien ‚Äî trabajando en el nuevo proyecto.", "That's awesome. Need any help?":"Eso es genial. ¬øNecesitas ayuda?" }
  };

  function mockTranslate(text, target){
    if (!target || target === 'en') return text;
    const dict = demoDict[target] || {};
    if (dict[text]) return dict[text];
    const common = {
      hi: { 'hello': '‡§®‡§Æ‡§∏‡•ç‡§§‡•á', 'hey': '‡§π‡•á', 'how': '‡§ï‡•à‡§∏‡•á', 'are': '‡§π‡•à', 'you': '‡§§‡•Å‡§Æ' },
      ta: { 'hello': '‡Æµ‡Æ£‡Æï‡Øç‡Æï‡ÆÆ‡Øç', 'hey': '‡Æπ‡Øá', 'how': '‡Æé‡Æ™‡Øç‡Æ™‡Æü‡Æø', 'are': '‡Æâ‡Æ≥‡Øç‡Æ≥‡Æ§‡ØÅ', 'you': '‡Æ®‡ØÄ' },
      es: { 'hello': 'hola', 'hey': 'hola', 'how': 'c√≥mo', 'are': 'est√°s', 'you': 't√∫' }
    };
    const words = text.split(/(\s+)/);
    const map = common[target] || {};
    return words.map(w => {
      const key = w.toLowerCase().replace(/[^a-zA-Z\u0900-\u0BFF\u0B80-\u0BFF]/g, '');
      return map[key] ? map[key] : w;
    }).join(' ');
  }

  // Sidebar buttons
  document.getElementById('translateBtn').addEventListener('click', () => {
    const target = document.getElementById('targetLang').value;
    const messages = Array.from(chatWindow.querySelectorAll('.message'));
    if (!messages.length) return alert('No messages to translate.');
    const last = messages[messages.length - 1];
    if (!last.dataset.original) last.dataset.original = last.textContent;
    last.textContent = mockTranslate(last.dataset.original, target);
    scrollToBottom();
  });
  document.getElementById('translateAllBtn').addEventListener('click', () => {
    const target = document.getElementById('targetLang').value;
    const messages = Array.from(chatWindow.querySelectorAll('.message'));
    messages.forEach(m => {
      if (!m.dataset.original) m.dataset.original = m.textContent;
      m.textContent = mockTranslate(m.dataset.original, target);
    });
    scrollToBottom();
  });

  // Floating dropdown buttons
  document.getElementById('dropdownTranslateBtn').addEventListener('click', () => {
    const target = document.getElementById('dropdownTargetLang').value;
    const messages = Array.from(chatWindow.querySelectorAll('.message'));
    if (!messages.length) return alert('No messages to translate.');
    const last = messages[messages.length - 1];
    if (!last.dataset.original) last.dataset.original = last.textContent;
    last.textContent = mockTranslate(last.dataset.original, target);
    scrollToBottom();
  });
  document.getElementById('dropdownTranslateAllBtn').addEventListener('click', () => {
    const target = document.getElementById('dropdownTargetLang').value;
    const messages = Array.from(chatWindow.querySelectorAll('.message'));
    messages.forEach(m => {
      if (!m.dataset.original) m.dataset.original = m.textContent;
      m.textContent = mockTranslate(m.dataset.original, target);
    });
    scrollToBottom();
  });
</script>
