<body>
  <div class="app-wrapper">
    <div class="sidebar">
      <div class="sidebar-top">
        <img src="https://images.unsplash.com/photo-1544005313-94ddf0286df2?w=200&h=200&fit=crop" class="profile-avatar" alt="avatar">
        <h5 id="sidebarName">Arun Kumar</h5>
        <span class="badge bg-light text-dark" id="sidebarLang">EN</span>

        <div class="mt-4">
          <label class="form-label">Display Name</label>
          <input id="displayName" class="form-control" value="Arun Kumar">
        </div>
        <div class="mt-3">
          <label class="form-label">Preferred Language</label>
          <select id="preferredLang" class="form-select">
            <option value="en">English</option>
            <option value="hi">Hindi</option>
            <option value="ta">Tamil</option>
            <option value="es">Spanish</option>
          </select>
        </div>
        <button id="saveProfile" class="btn btn-success mt-3 w-100">Save Profile</button>
      </div>

      <div class="sidebar-bottom">
        <div class="language-card">
          <h6>üåê Language Chat Converter</h6>
          <select id="targetLang" class="form-select mb-2">
            <option value="en">English</option>
            <option value="hi">Hindi</option>
            <option value="ta">Tamil</option>
            <option value="es">Spanish</option>
          </select>
          <button id="translateBtn" class="btn btn-primary w-100 mb-2">Translate Latest</button>
          <button id="translateAllBtn" class="btn btn-outline-light w-100">Translate All</button>
        </div>
      </div>
    </div>

    <div class="chat-area">
      <div class="chat-header">
        <div>
          <strong id="headerName">Arun Kumar</strong>
          <small class="d-block" id="headerStatus">Online</small>
        </div>
      </div>

      <div class="chat-window" id="chatWindow">
        <div class="message from-them">Hey! How are you?</div>
        <div class="message from-me">I'm good ‚Äî working on the new project.</div>
        <div class="message from-them">That's awesome. Need any help?</div>
      </div>

      <div class="chat-input">
        <input id="messageInput" type="text" placeholder="Type a message...">
        <button id="sendBtn">‚û§</button>
      </div>
    </div>
  </div>

<script>
  const chatWindow = document.getElementById('chatWindow');
  const messageInput = document.getElementById('messageInput');
  const sendBtn = document.getElementById('sendBtn');
  const translateBtn = document.getElementById('translateBtn');
  const translateAllBtn = document.getElementById('translateAllBtn');
  const preferredLang = document.getElementById('preferredLang');
  const displayName = document.getElementById('displayName');

  sendBtn.addEventListener('click', () => {
    const txt = messageInput.value.trim();
    if (!txt) return;
    appendMessage(txt, 'me');
    messageInput.value = '';
    scrollToBottom();
  });

  messageInput.addEventListener('keydown', (e) => {
    if (e.key === 'Enter') sendBtn.click();
  });

  document.getElementById('saveProfile').addEventListener('click', () => {
    document.getElementById('sidebarName').textContent = displayName.value;
    document.getElementById('headerName').textContent = displayName.value;
    document.getElementById('sidebarLang').textContent = preferredLang.value.toUpperCase();
  });

  function appendMessage(text, who='them'){
    const div = document.createElement('div');
    div.className = 'message ' + (who === 'me' ? 'from-me' : 'from-them');
    div.textContent = text;
    chatWindow.appendChild(div);
  }

  function scrollToBottom(){ chatWindow.scrollTop = chatWindow.scrollHeight; }

  const demoDict = {
    hi: {
      "Hey! How are you?": "‡§π‡•á! ‡§ï‡•à‡§∏‡•á ‡§π‡•ã?",
      "I'm good ‚Äî working on the new project.": "‡§Æ‡•à‡§Ç ‡§†‡•Ä‡§ï ‡§π‡•Ç‡§Å ‚Äî ‡§®‡§è ‡§™‡•ç‡§∞‡•ã‡§ú‡•á‡§ï‡•ç‡§ü ‡§™‡§∞ ‡§ï‡§æ‡§Æ ‡§ï‡§∞ ‡§∞‡§π‡§æ ‡§π‡•Ç‡§Å‡•§",
      "That's awesome. Need any help?": "‡§Ø‡§π ‡§∂‡§æ‡§®‡§¶‡§æ‡§∞ ‡§π‡•à‡•§ ‡§ï‡•ç‡§Ø‡§æ ‡§Æ‡§¶‡§¶ ‡§ö‡§æ‡§π‡§ø‡§è?"
    },
    ta: {
      "Hey! How are you?": "‡Æπ‡Øá! ‡Æé‡Æ™‡Øç‡Æ™‡Æü‡Æø ‡Æá‡Æ∞‡ØÅ‡Æï‡Øç‡Æï‡Æø‡Æ±‡Ææ‡ÆØ‡Øç?",
      "I'm good ‚Äî working on the new project.": "‡Æ®‡Ææ‡Æ©‡Øç ‡Æ®‡Æ≤‡ÆÆ‡Ææ‡Æï ‡Æá‡Æ∞‡ØÅ‡Æï‡Øç‡Æï‡Æø‡Æ±‡Øá‡Æ©‡Øç ‚Äî ‡Æ™‡ØÅ‡Æ§‡Æø‡ÆØ ‡Æ§‡Æø‡Æü‡Øç‡Æü‡Æ§‡Øç‡Æ§‡Æø‡Æ≤‡Øç ‡Æµ‡Øá‡Æ≤‡Øà ‡Æö‡ØÜ‡ÆØ‡Øç‡Æï‡Æø‡Æ±‡Øá‡Æ©‡Øç.",
      "That's awesome. Need any help?": "‡ÆÖ‡Æ§‡ØÅ ‡ÆÖ‡Æ∞‡ØÅ‡ÆÆ‡Øà. ‡Æâ‡Æ§‡Æµ‡Æø ‡Æµ‡Øá‡Æ£‡Øç‡Æü‡ØÅ‡ÆÆ‡Ææ?"
    },
    es: {
      "Hey! How are you?": "¬°Hola! ¬øC√≥mo est√°s?",
      "I'm good ‚Äî working on the new project.": "Estoy bien ‚Äî trabajando en el nuevo proyecto.",
      "That's awesome. Need any help?": "Eso es genial. ¬øNecesitas ayuda?"
    }
  };

  function mockTranslate(text, target){
    if (!target || target === 'en') return text;
    const dict = demoDict[target] || {};
    if (dict[text]) return dict[text];
    const common = {
      hi: { 'hello': '‡§®‡§Æ‡§∏‡•ç‡§§‡•á', 'hey': '‡§π‡•á', 'how': '‡§ï‡•à‡§∏‡•á', 'are': '‡§π‡•à', 'you': '‡§§‡•Å‡§Æ' },
      ta: { 'hello': '‡Æµ‡Æ£‡Æï‡Øç‡Æï‡ÆÆ‡Øç', 'hey': '‡Æπ‡Øá', 'how': '‡Æé‡Æ™‡Øç‡Æ™‡Æü‡Æø', 'are': '‡Æâ‡Æ≥‡Øç‡Æ≥‡Æ§‡ØÅ', 'you': '‡Æ®‡ØÄ' },
      es: { 'hello': 'hola', 'hey': 'hola', 'how': 'c√≥mo', 'are': 'est√°s', 'you': 't√∫' }
    };
    const words = text.split(/(\s+)/);
    const map = common[target] || {};
    return words.map(w => {
      const key = w.toLowerCase().replace(/[^a-zA-Z\u0900-\u0BFF\u0B80-\u0BFF]/g, '');
      return map[key] ? map[key] : w;
    }).join('');
  }

  translateBtn.addEventListener('click', () => {
    const target = document.getElementById('targetLang').value;
    const messages = Array.from(chatWindow.querySelectorAll('.message'));
    if (!messages.length) return alert('No messages to translate.');
    const last = messages[messages.length - 1];
    const original = last.dataset.original || last.textContent;
    last.dataset.original = original;
    last.textContent = mockTranslate(original, target);
  });

  translateAllBtn.addEventListener('click', () => {
    const target = document.getElementById('targetLang').value;
    const messages = Array.from(chatWindow.querySelectorAll('.message'));
    messages.forEach(m => {
      const original = m.dataset.original || m.textContent;
      m.dataset.original = original;
      m.textContent = mockTranslate(original, target);
    });
  });
</script>
</body>
</html> -->







