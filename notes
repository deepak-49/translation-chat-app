    .chat-input { display: flex; padding: 12px; background: #ffffff; border-top: 1px solid #ddd; }
    .chat-input input { flex: 1; border-radius: 30px; padding: 10px 20px; border: 1px solid #ccc; font-size: 15px; }
    .chat-input button { margin-left: 10px; border-radius: 50%; width: 45px; height: 45px; display: flex; align-items: center; justify-content: center; background: #43cea2; color: white; border: none; font-size: 18px; }
