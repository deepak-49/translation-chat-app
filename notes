    .chat-header { background: #2c3e50; color: white; padding: 15px 20px; display: flex; justify-content: space-between; align-items: center; font-weight: 500; }
    .chat-window { flex: 1; overflow-y: auto; padding: 20px; background: url('https://i.ibb.co/5vTgkHZ/chat-bg.png') center/cover no-repeat; }

    .message { max-width: 75%; padding: 12px 16px; border-radius: 20px; margin-bottom: 12px; font-size: 15px; line-height: 1.4; display: inline-block; }
